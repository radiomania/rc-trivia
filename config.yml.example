# Server address
# no trailing slash!
server: 'http://192.168.21.20:3000'

# User credentials for bot account
username: 'bot@localhost'
password: '12345'

# Channel name for the game
channel: 'trivia-game'

# Enable debug
debug: false

# Timeout before the answer will be displayed, sec.
timeout: 20

# Timeout before bot will go to sleep, sec.
activity_timeout: 30

# The game is active from the start
# If the value is false someone will have to write !start to start the game
start_active: true

# Time before hint could be given
hint_time: 30